{
  "name": "@holochain-playground/cli",
  "version": "0.300.1",
  "description": "CLI tool that boots up the holochain playground to connect to a real running Holochain conductor",
  "author": "guillem.cordoba@gmail.com",
  "scripts": {
    "start": "pnpm build && concurrently \"nodemon --config ./nodemon.config.json\" --raw",
    "build": "rimraf dist && cross-env NODE_ENV=development webpack --config webpack.config.js && chmod +x dist/app.js",
    "build:release": "dist && cross-env NODE_ENV=production webpack --config webpack.config.js && chmod +x dist/app.js"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "access": "public"
  },
  "files": [
    "dist"
  ],
  "main": "dist/app.js",
  "bin": {
    "holochain-playground": "./dist/app.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/darksoil-studio/holochain-playground"
  },
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.15.5",
    "@babel/preset-env": "^7.15.6",
    "@holochain-playground/cli-client": "workspace:^0.300.0",
    "@mdi/font": "5.9.55",
    "@types/body-parser": "^1.19.0",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.7",
    "@types/node": "^22.7.5",
    "@types/prompts": "^2.0.14",
    "babel-loader": "^8.2.2",
    "babel-polyfill": "^6.26.0",
    "body-parser": "^1.19.0",
    "bufferutil": "^4.0.3",
    "chalk": "^4.1.2",
    "clear-npx-cache": "^1.0.1",
    "concurrently": "^5.1.0",
    "copy-webpack-plugin": "^6.4.1",
    "core-js": "^3.6.5",
    "cross-env": "^7.0.3",
    "deepmerge": "^4.2.2",
    "diff": "^5.0.0",
    "dotenv": "^8.6.0",
    "eslint": "^9.0.0",
    "express": "^4.17.1",
    "get-port-please": "^2.2.0",
    "node-fetch": "^3.0.0",
    "nodemon": "^2.0.4",
    "open": "^8.2.1",
    "path": "^0.12.7",
    "prettier": "^3.2.5",
    "prompts": "^2.4.1",
    "rimraf": "^3.0.2",
    "sass": "~1.32",
    "sass-loader": "^10.0.0",
    "semver": "^7.3.5",
    "socket.io": "^4.4.0",
    "stream": "^0.0.2",
    "ts-loader": "^8.0.0",
    "ts-node": "^8.10.2",
    "typescript": "^5.4.0",
    "utf-8-validate": "^5.0.5",
    "webpack": "^5.75.0",
    "webpack-cli": "^5.0.1",
    "webpack-path-resolve": "^0.0.3"
  }
}